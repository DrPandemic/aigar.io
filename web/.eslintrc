{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "comma-dangle": [
      "error", "only-multiline"
    ],
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "log"]
      }
    ],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-var": ["error"],
    "space-infix-ops": ["error"],
    "comma-spacing": ["error", { "before": false, "after": true }]
  }
}
